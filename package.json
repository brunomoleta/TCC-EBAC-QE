{
  "name": "tcc-ebac-qa",
  "type": "commonjs",
  "version": "1.0.0",
  "description": "Projeto QA envolvendo teste automatizado de UI, mobile e API.",
  "main": "index.js",
  "scripts": {
    "test-api": "mocha 'API/tests/**/*.spec.mjs' --reporter mochawesome --reporter-options reportDir=./API/apiReporter",
    "test-performance": "k6 run performance/tests/login.test.js",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "format": "prettier --write '**/*.{js,json,mjs}'",
    "report": "mergeJsonReport && pnpm generateReport",
    "mergeJsonReport": "npx mochawesome-merge ./UI/mochawesome-report/*.json -o ./UI/mochawesome-report/result.json",
    "generateReport": "npx marge ./UI/mochawesome-report/result.json -o ./UI/mochawesome-report"
  },
  "keywords": [],
  "author": "bruno-moleta-santos",
  "license": "ISC",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^20.1.0",
    "@cypress/webpack-preprocessor": "^6.0.2",
    "@faker-js/faker": "^8.4.1",
    "allure-commandline": "^2.29.0",
    "allure-mocha": "3.0.0-beta.7",
    "chai": "^5.1.1",
    "chai-things": "^0.2.0",
    "cypress": "^13.13.1",
    "dotenv": "^16.4.5",
    "mocha": "^10.6.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "k6": "^0.0.0"
  }
}
